<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Nombre: "/>

            <TextView
                android:id="@+id/nombreAlumno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nicolas Rozas"
                android:background="@drawable/item_press"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Legajo: "/>

            <TextView
                android:id="@+id/legajoAlumno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="05-2503-0"
                android:background="@drawable/item_press"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Carrera: "/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ingenieria en Sistemas de Informacion"/>

        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/azulFondoApretado"
            android:layout_marginTop="10dp">
        </TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/agregarCursadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_selector"
                android:text="Agregar Cursada"/>

            <Button
                android:id="@+id/agregarFinales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_selector"
                android:text="Agregar Final"/>

        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/azulFondoApretado"
            android:layout_marginTop="10dp">
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:text="Carrera: "/>

        <Button
            android:id="@+id/analitico"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_selector"
            android:text="Analitico"/>

        <Button
            android:id="@+id/historialDeFinales"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_selector"
            android:layout_marginTop="5dp"
            android:text="Historial de finales"/>

        <Button
            android:id="@+id/historialDeCursadas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_selector"
            android:layout_marginTop="5dp"
            android:text="Historial de cursadas"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/azulFondoApretado"
            android:layout_marginTop="10dp">
        </TableRow>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="25sp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="Porcentaje de la carrera: "/>-->

        <!--<Button-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="300dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="Grafico"/>-->

    </LinearLayout>
</ScrollView>